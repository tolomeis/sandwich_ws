<?xml version="1.0"?>
<robot name="sandwich">

	<!-- * * * Link Definitions * * * -->

	 <link name="base_link">
		<visual>
			<geometry>
				<box size="0.20 0.09 0.03"/>
			</geometry>
			<material name="white">
				   <color rgba="1.0 1.0 1.0 1.0"/>
			</material>
		</visual>
	</link>

	<link name="right_wheel">
		<visual>
			<geometry>
				<mesh filename="package://sandwich/meshes/pololu_wheel.stl" scale = "0.001 0.001 0.001"/>
			</geometry>
			<origin rpy="1.57 0.0 0.0" xyz="0.0 0.0 0.0"/>
			<material name="black">
				   <color rgba="0.0 0.0 0.0 1.0"/>
			</material>
		</visual> 
	</link>

	<link name="left_wheel">
		<visual>
			<geometry>
				<mesh filename="package://sandwich/meshes/pololu_wheel.stl" scale = "0.001 0.001 0.001"/>
			</geometry>
			<origin rpy="-1.57 0.0 0.0" xyz="0.0 0.0 0.0"/>
			<material name="black">
				   <color rgba="0.0 0.0 0.0 1.0"/>
			</material>
		</visual> 
	</link>


	<joint name="base_link_to_right_wheel" type="fixed">
		<parent link="base_link"/>
		<child link="right_wheel"/>
		<origin xyz="-0.045 -0.05 -0.025"/>
	</joint>

	<joint name="base_link_to_left_wheel" type="fixed">
		<parent link="base_link"/>
		<child link="left_wheel"/>
		<origin xyz="-0.045 0.05 -0.025"/>
	</joint>


</robot>